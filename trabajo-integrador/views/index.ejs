<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			
             
			<div class="col-12 col-sm-6 col-lg-3">
                <%
                for(let i=0;i<catalogoZapatos.productos.length;i++){ %>

                <section class="product-box">
                    <a href="/zapatos/<%= catalogoZapatos.productos[i].id%>">
                        <figure class="product-box_image">
                            <img src='/<%=catalogoZapatos.productos[i].imagen %>' alt='/<%= catalogoZapatos.productos[i].nombre%>'>
                        </figure>
                        <article class="product-box_data">
                            <h2> <%= catalogoZapatos.productos[i].nombre%> </h2>
                            <p> Descripción: <%= catalogoZapatos.productos[i].descripcion%> </p>
                            <p>Comentarios: <%= catalogoZapatos.comentarios[i]%> </p>
                        </article>
                    </a>
				</section>
                <%}%>
	        </div>
        </div>
    </div>
    //Novedades
	
    //Más comentados 
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			
            
			<div class="col-12 col-sm-6 col-lg-3">
                <%
                for(let i=0;i<catalogoZapatos.productos.length;i++){ %>

                <section class="product-box">
                    <a href="product.ejs">
                        <figure class="product-box_image">
                            <img src='/<%=catalogoZapatos.productos[i].imagen %>' alt='/<%= catalogoZapatos.productos[i].nombre%>'>
                        </figure>
                        <article class="product-box_data">
                            <h2> <%= catalogoZapatos.productos[i].nombre%> </h2>
                            <p> Descripción: <%= catalogoZapatos.productos[i].descripcion%> </p>
                            <p>Comentarios: <%= catalogoZapatos.comentarios[i] %></p>
                        </article>
                    </a>
				</section>
                <%}%>
	        </div>
        </div>
    </div>
	///Más comentados
    <%- include('./partials/footer')%>
</body>

</html>