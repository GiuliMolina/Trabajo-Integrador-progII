
<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
    <!-- product detail -->
	<div class="container products-wrapper">
			<div class="d-flex align-items-center">
                <h2 class="products-title"><%= catalogoZapatos.productos[0].nombre %> </h2> 
                <p class="product-detail-description">
                    <a href="/zapatos/productAdd">Editar</a>
                </p>
		    </div>

            <div class="product-detail">
			<div class="product-detail">

			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/<%= catalogoZapatos.productos[0].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">

						<%= catalogoZapatos.productos[0].descripcion %> </p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src="/<%=catalogoZapatos.usuario.imagen%>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile">Nombre usuario: <%= catalogoZapatos.usuario.nombre %></a> </strong>
                                <%for(let j=0;j<catalogoZapatos.productos[0].comentarios.length;j++){ %>
									<p>Comentarios: <%= catalogoZapatos.productos[0].comentarios[j].texto%> </p>
									<%}%>
								</p>
					</div>
						</article>
					    </section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	
	

<%- include('./partials/footer')%>
</body>	
</html>

