
<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
    <!-- product detail -->
	<div class="container products-wrapper">
        <%
            for(let i=0;i<catalogoZapatos.productos.length;i++){ %>
				<%if(catalogoZapatos.productos[i].id === idProducto){%>
					<div class="d-flex align-items-center">
                <h2 class="products-title"><%= catalogoZapatos.productos[i].nombre %> </h2> 
                <p class="product-detail-description">
                    <a href="/zapatos/productAdd">Editar</a>
                </p>
		    </div>

            <div class="product-detail">
		<div class="product-detail">

			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="./images/products/default-image.png" alt="" class="product-detail-img">
					<p class="product-detail-description">

						<%= catalogoZapatos.productos[i].descripcion %> </p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile">Nombre usuario: <%= catalogoZapatos.usuario.nombre %></a> </strong>
                                <%= catalogoZapatos.comentarios.texto %>
								</p>
							</div>
						</article>
					    </section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<%}%>

    <%}%>
	

	<%- include('./partials/footer')%>
</body>	
</html>

