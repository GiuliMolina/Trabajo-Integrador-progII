<%- include('./partials/head') %>
<body>
	<%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper divlogin">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title tituloingresar">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if(locals.errors){ %>
				<p> <%= locals.errors.message %> </p>
			<%}%>
			<h2 class="col-12 container_register">
				<form action="/users/register" method="post">
					<p> Nombre:<input type="text" name="user" placeholder="nombre" value=""> </p>
					<p> Email:<input type="email" name="email" placeholder="email" value=""> </p>
					<p> Contraseña:<input type="password" name="password" placeholder="contraseña" value=""> </p>
					<p> Fecha de nacimiento:<input type="date" name="fecha_de_nacimiento" placeholder="fecha de nacimiento" value=""> </p>
					<p> DNI:<input type="number" name="dni" placeholder="DNI" value=""> </p>
					<p> Foto de perfil: <input type="text" name="foto_de_perfil" placeholder="foto de perfil"> </p>
					<button type="submit" class="registrarse">Registrarse<i class="fas fa-search"></i></button>
				</form>
			</h2>
		</div>
	</div>

	
     <%- include('./partials/footer')%>
</body>

</html>