<%- include('./partials/head') %>
<body>
	<%- include('./partials/header') %>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title h2_search">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
            <%if (resultadosDeBusqueda){%>
            <h2 class="texto resultados_busqueda">Estos son los resultados para su búsqueda: <%=busquedaDelUsuario%></h2>
            <section class="section_resultados">
                <%for (let i=0; i<resultados.length; i++){%>
                <div class="contenedor">
                    <a href="/zapatos/product/<%= resultados[i].id%>">
                    <figure class="product-box_image">
                        <div class="searchdiv-img">
                            <img class="imgsearch" src='/<%=resultados[i].imagen %>' alt='/<%= resultados[i].nombre_producto%>'>
                        </div>              
                    </figure> 
                    <article class="product-box_data ">
                        <h2> <%= resultados[i].nombre_producto%> </h2>
                            <p> Descripción: <%= resultados[i].descripcion%> </p>
                            <p class="user">
								<strong> <a href="/users/profile">Cargado por: <%=resultados[i].user.nombre%></a> </strong>
							</p>
                            <p> Comentarios:</p>
                            <ul>
                                <%for(let j=0;j<resultados[i].comentario.length;j++){ %>
                                    <li> 
                                    <img  class='fotocomentarios' src="/<%=resultados[i].comentario[j].user.foto_de_perfil%>">
                                    <h3> <%=resultados[i].comentario[j].user.nombre%> </h3>
                                    <p> <%=resultados[i].comentario[j].comentario%> </p>
                                    </li>
                                <%}%>
                            </ul>
            

                    </article>
                    </a>
                </div>
                <%}%>
			</section>
            <%}else{%>
                <h2>No hay resultados para su criterio de búsqueda</h2>
            <%}%> 
        </div>
    </div>

	<%- include('./partials/footer')%>
</body>
</html>

