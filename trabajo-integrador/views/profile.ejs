<%- include('./partials/head') %>
<body>
	<%- include('./partials/header') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src=" /<%=catalogoZapatos.usuario.imagen%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">  <%= catalogoZapatos.usuario.nombre%>
						<a href="/users/profileEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<p> <%= catalogoZapatos.usuario.email%></p>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>10.000 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			
			
			<%for(let i=0;i<4;i++){ %>
            <div class="col-md-4 col-sm-4 col-lg-3">

                <section class="product-box">
                    <a href="/zapatos/<%= catalogoZapatos.productos[i].id%>">
                        <figure class="product-box_image">
                            <img src='/<%=catalogoZapatos.productos[i].imagen %>' alt='/<%= catalogoZapatos.productos[i].nombre%>'>
                        </figure>
                        <article class="product-box_data">
                            <h2> <%= catalogoZapatos.productos[i].nombre%> </h2>
                            <p> Descripci√≥n: <%= catalogoZapatos.productos[i].descripcion%> </p>
							<p> Comentarios:</p>
                            <%
                            for(let j=0;j<catalogoZapatos.productos[i].comentarios.length;j++){ %>
                            <img class='fotocomentarios' src="/<%=catalogoZapatos.productos[i].comentarios[j].imagen %>">
                            <h3> <%=catalogoZapatos.productos[i].comentarios[j].nombre%> </h3>
                            <p> <%= catalogoZapatos.productos[i].comentarios[j].texto%> </p>
                            <%}%>
                            
                        </article>
                    </a>
				</section>
            </div>
            <%}%>
		</div>
	</div>
	
	<%- include('./partials/footer')%>
</body>	
</html>


