<%- include('./partials/head') %>
<body>
	<%- include('./partials/header') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= "/<%= usuario.foto_de_perfil%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h3 class="main-title"><a href="/users/profile/<%= usuarioId%>"> <%= usuario.nombre%></a></h3>
					<p> <%= usuario.email%></p>
					<!-- <a class="btn mt-3 ml-4 seguir" href="">SEGUIR</a> -->
					<%if(usuarioLogueado && user.email== usuario.email){%>
					<p class="main-title"><a href="/users/profile-edit/<%= usuarioId%>"> Editar mi perfil</a></p>
					<%}%>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>10.000 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			
			
			<%for(let i=0; i< producto.length; i++){ %>
            <div class="col-md-4 col-sm-4 col-lg-3">

                <section class="product-box">
                    <a href="/zapatos/product/<%= producto[i].id %>">
                        <figure class="product-box_image">
                            <img src='/<%= producto[i].imagen %>' alt='/<%= producto[i].nombre_producto%>'>
                        </figure>
                        <article class="product-box_data">
                            <h2> <%= producto[i].nombre_producto%> </h2>
                            <p> Descripci√≥n: <%= producto[i].descripcion%> </p>
							<h3> Comentarios:</h3>
								<ul>
									<%for(let j=0;j<comentario.length;j++){ %>
										<li> 
											<img  class='fotocomentarios' src="/<%=comentario[j].user.foto_de_perfil%>">
											<h3><a href="/users/profile/ <%=comentario[j].user.id%>"> <%=comentario[j].user.nombre%></a>:</h3>
											<p> <%=comentario[j].comentario%> </p>
										</li>
									<%}%>
								</ul>
                            
                        </article>
                    </a>
				</section>
            </div>
            <%}%>
		</div>
	</div>
	
	<%- include('./partials/footer')%>
</body>	
</html>


